<h2 class="text-center">更新文章</h2>

<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [@city,@post] do |f| %>
    <div class="form-group">
      <%= f.input :address, input_html: { class: "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.input :reason, input_html: { class: "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.input :price, input_html: { class: "form-control"}, label: "预算" %>
    </div>
    <div class="form-group">
      <%= f.input :necessity, input_html: { class: "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.input :best_time, input_html: { class: "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.input :reservation, input_html: { class: "form-control"} %>
    </div>

    <div class="form-actions">
      <%= f.submit "Submit", disable_with: "Submiting...", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
